<% include ../partials/header.ejs %>

<!-- MAIN CONTENT -->
<div class="container">
  <div class="row">
    <div class="col-md-offset-1 col-md-10">
      <h3>Faculty Information</h3>
      <a href="/faculties/add" class="btn btn-primary"
        ><i class="fa fa-plus"></i> Add a faculty</a
      >

      <br />
      <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
          <thead>
            <tr>
              <th>Faculty ID</th>
              <th class="text-center">Faculty Name</th>
              <th class="text-center">Department</th>
              <th class="text-center">Subject</th>
              <th class="text-center"></th>
            </tr>
          </thead>
          <tbody>
            <!-- Template Row -->
            <% for (let count = 0; count < faculties.length; count++) { %>
            <tr>
              <td><%= faculties[count].Facultyid %></td>
              <td class="text-center"><%= faculties[count].Facultyname %></td>
              <td class="text-center"><%= faculties[count].Department %></td>
              <td class="text-center"><%= faculties[count].Subject %></td>

              <!-- Edit button -->
              <td class="text-center">
                <a href="/faculties/<%= faculties[count]._id%>" class="btn btn-primary">
                  <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                </a>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>

      <!-- Input the faculty name -->
      <input id="facultyName" type="text" value="">

      <a href="" id="deleteBtn" class="btn btn-warning btn-sm">
        <i class="fa fa-trash"></i> Delete</a>
    </main>

      <div class="col-md-offset-1 col-md-10 text-center">
        <ul class="pagination pagination-lg pager" id="myPager"></ul>
      </div>
    </div>
  </div>
</div>

<% include ../partials/footer.ejs %>
